{
  "private": true,
  "name": "lemon-wallpaper",
  "version": "0.1.0",
  "author": {
    "email": "tangdaohai@outlook.com",
    "name": "阿Q"
  },
  "main": "dist-electron/index.js",
  "homepage": "./",
  "scripts": {
    "electron-build": "tsc --resolveJsonModule --outDir dist-electron electron/index.ts",
    "electron-ts-watch": "tsc --resolveJsonModule --watch --outDir dist-electron electron/index.ts --sourceMap",
    "electron-start": "electron .",
    "electron-dev-watch": "nodemon --watch ./dist-electron/*.js --exec 'electron .'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package-mac": "electron-builder build --mac"
  },
  "build": {
    "appId": "com.tangdaohai.${name}",
    "productName": "柠檬壁纸",
    "copyright": "Copyright © 2020 ${author}",
    "directories": {
      "buildResources": "resources",
      "output": "package-dist"
    },
    "extends": null,
    "files": [
      "build/**/*",
      "dist-electron/**/*.js",
      "node_modules/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.45",
    "cheerio": "^1.0.0-rc.3",
    "electron-happy-ipc": "^1.0.0-beta",
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.1",
    "lemon-utils": "^0.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "request": "^2.88.2",
    "wallpaper": "^4.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/cheerio": "^0.22.17",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/request": "^2.48.4",
    "electron": "^8.5.2",
    "electron-builder": "^22.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.2",
    "react-scripts": "3.4.0",
    "typescript": "~3.7.2"
  },
  "workspaces": [
    "./utils"
  ]
}
